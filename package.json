{
  "name": "perplexity-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Perplexity AI Search Integration",
  "type": "module",
  "bin": {
    "perplexity-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "inspect": "pnpm build && pnpx @modelcontextprotocol/inspector node ./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "dotenv": "^16.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
