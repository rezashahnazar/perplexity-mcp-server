{
  "name": "perplexity-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Perplexity AI Search Integration with StreamableHTTP",
  "type": "module",
  "bin": {
    "perplexity-mcp-server": "./dist/stdio.js",
    "perplexity-mcp-http": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "tsx src/server.ts",
    "start:stdio": "tsx src/stdio.ts",
    "dev": "tsx watch src/server.ts",
    "dev:stdio": "tsx watch src/stdio.ts",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/server.js",
    "inspector:stdio": "npx @modelcontextprotocol/inspector dist/stdio.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsx": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
